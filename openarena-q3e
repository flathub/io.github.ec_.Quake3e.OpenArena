#!/bin/sh
CVARS="+set fs_basegame baseoa +set protocol 71"
DISABLED_CVARS="+set com_protocol 72 +set cl_voip 1"

arch="$(uname -m)"
case "$arch" in
    x86_64) q3e_arch="x64" ;;
    aarch64) q3e_arch="aarch64" ;;
esac

if [ "$1" = "-g" ]; then
exec quake3e.${q3e_arch} "+set fs_basegame "$@""
else
echo "Pass -g argument to change basegame CVAR"
exec quake3e.${q3e_arch} $CVARS "$@"
fi
